<Window x:Class="McLauncher2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="McLauncher2" ResizeMode="CanMinimize" Height="390" Width="500"
        Closing="MainWindow_Closing">
    <Grid Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Button Name="Button_TargetFolder" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5"
                Content="ターゲットフォルダ選択" 
                Click="Button_TargetFolder_Click" />
        <Label Name="Label_TargetFolder" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
               Content="No Setting" 
               VerticalAlignment="Center"/>
        <ListBox Name="ListBox_TargetList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                 Margin="5" 
                 ItemsSource="{Binding}"
                 SelectionMode="Single"
                 SelectionChanged="ListBox_TargetList_SelectionChanged"
                 />
        <ListBox Name="ListBox_Target" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"
                 Margin="5" 
                 ItemsSource="{Binding}"
                 SelectionMode="Single"
                 MouseDoubleClick="ListBox_Target_MouseDoubleClick"/>
        <Button Name="Button_Run" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                Content="起動" 
                Click="Button_Run_Click"/>
        <Button Name="Button_ConfigEditor" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="5"
                Content="コンフィグエディターを起動" 
                Click="Button_ConfigEditor_Click" />
        <Button Name="Button_Setting" Grid.Row="4" Grid.Column="0" Margin="5"
                Content="基本設定" 
                Click="Button_Setting_Click" />
        <Button Name="Button_EditBat" Grid.Row="4" Grid.Column="1" Margin="5"
                Content="上級者向け設定" 
                Click="Button_EditBat_Click"/>
        <Button Name="Button_Memo" Grid.Row="4" Grid.Column="2" Margin="5"
                Content="メモ" 
                Click="Button_Memo_Click"/>
        <Button Name="Button_Exit" Grid.Row="4" Grid.Column="3" Margin="5"
                Content="終了" 
                Click="Button_Exit_Click"/>
    </Grid>
</Window>
