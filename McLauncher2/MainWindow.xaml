<Window x:Class="McLauncher2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="McLauncher2" ResizeMode="CanMinimize" Height="360" Width="500">
    <Grid Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="180"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>
        <Button Name="button_targetFolder" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                Margin="5"
                Content="ターゲットフォルダ選択" />
        <Label Name="label_targetFolder" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
               Content="No Setting" 
               VerticalAlignment="Center"/>
        <ListBox Name="listBox_targetList" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                 Margin="5" 
                 ItemsSource="{Binding}"/>
        <ListBox Name="listBox_target" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"
                 Margin="5" 
                 ItemsSource="{Binding}"/>
        <Button Name="button_run" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="5"
                Content="起動" />
        <Button Name="button_configEditor" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="5"
                Content="コンフィグエディターを起動" />
        <Button Name="button_setting" Grid.Row="3" Grid.Column="0" Margin="5"
                Content="基本設定" />
        <Button Name="button_editBat" Grid.Row="3" Grid.Column="1" Margin="5"
                Content="上級者向け設定" />
        <Button Name="button_help" Grid.Row="3" Grid.Column="2" Margin="5"
                Content="ヘルプ" />
        <Button Name="button_exit" Grid.Row="3" Grid.Column="3" Margin="5"
                Content="終了" />
    </Grid>
</Window>
